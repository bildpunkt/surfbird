{
  "name": "surfbird",
  "version": "0.1.0",
  "description": "Electron twitter client",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron main.js",
    "lint": "eslint .",
    "build": "npm run build:linux && npm run build:windows",
    "build:linux": "electron-packager . --ignore='^node_modules$' --overwrite --asar --out=dist --prune --platform=linux --arch=x64 --app-bundle-id=com.pixeldesu.surfbird --app-version=$version",
    "build:windows": "electron-packager . --ignore='^node_modules$' --overwrite --out=dist --platform=win32 --arch=ia32 --version-string.ProductName=$npm_package_productName --app-version=0.1.0",
    "build:osx": "electron-packager . --ignore='^node_modules$' --overwrite --asar --out=dist --prune --platform=darwin --arch=x64 --icon=media/Icon.icns --app-bundle-id=com.pixeldesu.surfbird --app-version=$version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixeldesu/surfbird.git"
  },
  "keywords": [
    "twitter",
    "electron",
    "desktop",
    "application"
  ],
  "author": {
    "name": "Andreas Nedbal",
    "email": "andy@pixelde.su",
    "url": "pixelde.su"
  },
  "license": "aGPLv3",
  "bugs": {
    "url": "https://github.com/pixeldesu/surfbird/issues"
  },
  "homepage": "https://github.com/pixeldesu/surfbird#readme",
  "dependencies": {
    "bootstrap-sass": "^3.3.6",
    "jquery": "^2.2.3",
    "nconf": "^0.8.4",
    "node-twitter-api": "^1.7.2",
    "twit": "^2.2.4",
    "vue": "^1.0.24",
    "vue-i18n": "^4.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-runtime": "^6.0.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "electron-packager": "7.0.0",
    "electron-prebuilt": "1.0.2",
    "eslint": "2.9.0",
    "eslint-config-vgno": "6.0.0",
    "font-awesome": "^4.6.3",
    "gulp": "^3.9.1",
    "gulp-add-src": "^0.2.0",
    "gulp-concat": "^2.6.0",
    "gulp-sass": "^2.3.1",
    "gulp-uglify": "^1.5.3",
    "node-sass": "^3.7.0",
    "vinyl-source-stream": "^1.1.0",
    "vinyl-transform": "^1.0.0",
    "vue-hot-reload-api": "^1.3.2",
    "vueify": "^8.4.1",
    "vueify-insert-css": "^1.0.0"
  }
}
